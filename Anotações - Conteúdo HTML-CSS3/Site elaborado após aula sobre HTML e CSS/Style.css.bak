body {
	background: #ffa;
	font-family: verdana;
	margin: auto;
	max-width: 900px;
}
.img {
	max-width: 4.5%;
}
.post {
	background: #C6F2F2;
	padding: 15px;
	border: 3px solid black;
	margin: 10px;
	border-radius: 10px;
}
#title {
	color: black;
	font-size: 50px;
	text-transform: uppercase;
	text-align: center;
}
.subtitle {
	color: blue;
	font-style: italic;	
	text-align: center;
}
section ol li a {
	text-decoration: none;
}
footer {
	background: #C6F2F2;	
	border: 3px solid black;
	padding: 0px;	
	max-width: 170px;
	border-radius: 15px;
	font-size: 14px;
	margin: auto;
	text-align: center;
	text-decoration: none;
}
p {
	text-decoration: none;

}

	
	
